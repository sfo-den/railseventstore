<% wrap_layout :base do %>
  <header class="frame__section">
    <div class="container mx-auto">
      <%= partial "partials/site_section", locals: { title: "Documentation" , subtitle: nil } %>
    </div>
  </header>

  <main class="frame__body" role="main">
    <div class="container mx-auto px-4 text-xl text-grey-darker leading-normal">
      <nav class="frame__sidebar">
        <%= partial "partials/documentation_nav" %>
      </nav>

      <div class="frame__main text-base text-grey-darkest documentation">
        <%= yield %>
      </div>
    </div>
  </main>

  <style>
    .anchorjs-link, .anchorjs-link:hover, .anchorjs-link:active {
      background-color: transparent;
      text-decoration: none;
      border: none;
      color: #adb5bd;
    }
  </style>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/anchor-js/4.1.1/anchor.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function(event) {
      anchors.add('.frame__main h2, .frame__main h3');
    });
</script>
<% end %>
