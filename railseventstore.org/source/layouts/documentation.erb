<% wrap_layout :base do %>
  <header class="frame__section">
    <div class="container mx-auto">
      <div class="site-section px-4 h-16 flex items-center justify-between">
        <span class="site-section__title text-xl font-normal">Documentation</span>
        <input class="w-64 text-base py-2 px-4 rounded appearance-none bg-grey-darker text-grey-lightest" id="search" type="text" placeholder="Search" />
      </div>
    </div>
  </header>

  <main class="frame__body" role="main">
    <div class="container mx-auto flex flex-wrap">
      <nav class="frame__sidebar w-full md:w-1/4 px-4">
        <%= partial "partials/documentation_nav" %>
      </nav>

      <div class="frame__main w-full md:w-3/4 docs text-base px-4">
        <h1><%= page_title %></h1>
        <%= yield %>

        <div class="mt-12">
          <%= edit_github_link %>
          <%= feedback_link %>
        </div>
      </div>
    </div>
  </main>

  <style>
    .anchorjs-link, .anchorjs-link:hover, .anchorjs-link:active {
      background: none;
      text-decoration: none;
      border: none;
      color: #adb5bd;
    }
  </style>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/anchor-js/4.1.1/anchor.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function(event) {
      anchors.add('.docs h2, .docs h3');
    });
  </script>
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/docsearch.js@2/dist/cdn/docsearch.min.js"></script> 
  <script type="text/javascript">
    docsearch({
      apiKey: '45776784d078c2fa4495099da7063654',
      indexName: 'railseventstore',
      inputSelector: '#search',
      debug: false
    });
  </script>

<% end %>
